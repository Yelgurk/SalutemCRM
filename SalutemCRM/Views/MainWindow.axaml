<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SalutemCRM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SalutemCRM.Views"
		xmlns:control="clr-namespace:SalutemCRM.Control"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="SalutemCRM.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SalutemCRM">
	<Grid>
		<views:MainView VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsVisible="False"/>

		<Grid ColumnDefinitions="*, *">
			<Label Classes="card rounded tag" Tag="1."
				   Margin="40">
				<control:SearchVendorControl x:Name="SVC"/>
			</Label>


			<Label Classes="card rounded tag" Tag="2." Grid.Column="1"
				   Margin="40">
				<control:SearchVendorControl
					IsEnabled="{Binding #SVC.DataContext.Source.IsItemSelected}"/>
			</Label>
		</Grid>
	</Grid>
</Window>
